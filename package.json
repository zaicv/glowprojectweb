    "assistant-ui": "^0.0.55",
    "axios": "^1.10.0",
    "babel-plugin-glsl": "^1.0.0",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
