{
  "name": "glow",
  "private": true,
  "version": "1.0.0",
  "description": "GlowGPT — the intelligent mirror of The Glow. A cognitive and emotional interface that blends presence, creativity, and AI.",
  "author": "Isaiah Briggs",
  "license": "Proprietary",
  "homepage": "https://theglowproject.com",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:serve\"",
    "electron:serve": "wait-on https://100.120.118.94:5173 && cross-env VITE_DEV_SERVER_URL=https://100.120.118.94:5173 electron electron/main.cjs",
    "electron:build": "vite build && electron-builder",
    "tauri": "tauri"
  },
  "dependencies": {
